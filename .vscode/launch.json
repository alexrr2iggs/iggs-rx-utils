	"version": "0.2.0",
	"configurations": [
		{
			"name": "file",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"runtimeArgs": ["--nolazy", "-r", "/lib/node_modules/ts-node/register"],
			"args": ["${file}"],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "file test",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"runtimeArgs": ["--nolazy", "--test", "-r", "/lib/node_modules/ts-node/register"],
			"args": ["${file}"],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart",
			"console": "internalConsole"
		}
	]
}
